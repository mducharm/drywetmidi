{
  "metadata": [
    {
      "src": [
        {
          "files": [ "DryWetMidi/Melanchall.DryWetMidi.csproj" ],
          "exclude": [ "**/bin/**", "**/obj/**" ],
          "src": "../"
        }
      ],
      "dest": "obj/api",
      "shouldSkipMarkup": true,
      "properties": {
        "TargetFramework": "netstandard2.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.yml" ],
        "src": "obj/api",
        "dest": "api"
      },
      {
        "files": [ "**/*.md", "**/toc.yml" ],
		"exclude": [ "pdf/toc.yml" ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "articles/**/images/**" ]
      }
    ],
    "globalMetadata": {
      "_appTitle": "DryWetMIDI",
      "_enableSearch": true,
      "_appLogoPath": "images/logo.png",
      "_appFaviconPath": "images/favicon.png",
      "_appFooter": "2022 / Generated by <a href=\"https://dotnet.github.io/docfx\">DocFX</a>",
      "_disableContribution": true
    },
    "template": [
      "default",
	  "templates/dwm"
    ],
    "markdownEngineName": "markdig",
    "dest": "_site",
    "xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ]
  },
  "pdf": {
    "content": [
      {
        "files": [ "obj/api/*.yml" ],
        "exclude": [
          "**/toc.yml",
          "**/toc.md"
        ]
      },
      {
        "files": [
		  "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md",
		  "obsolete/obsolete.md",
          "pdf/*"
		]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "articles/**/images/**" ],
		"exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site_pdf/**" ]
      }
    ],
	"overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site_pdf/**"
        ]
      }
    ],
    "template": [
      "pdf.default",
	  "templates/dwm.pdf"
    ],
    "wkhtmltopdf": {
      "additionalArguments": "--enable-local-file-access --margin-top 0 --margin-bottom 0 --margin-left 0 --margin-right 0"
    },
    "dest": "_site_pdf"
  }
}